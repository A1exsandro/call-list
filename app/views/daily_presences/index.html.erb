<p id="notice"><%= notice %></p>

<h1>Daily Presences</h1>

<table>
  <thead>
    <tr>
      <th>Student</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @daily_presences.each do |daily_presence| %>
      <tr>
        <td><%= daily_presence.student.name %></td>
        <td><%= daily_presence.date %></td>
        <td><%= link_to 'Show', daily_presence %></td>
        <td><%= link_to 'Edit', edit_daily_presence_path(daily_presence) %></td>
        <td><%= link_to 'Destroy', daily_presence, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

